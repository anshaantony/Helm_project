server {
    listen 80;

    # Serve static files (CSS, JS) from the 'frontend/static' folder
    location /static/ {
        root /usr/share/nginx/html;
        try_files $uri $uri/ =404;
    }

    # Serve the main index.html file from the 'frontend/templates' folder
    location / {
        root /usr/share/nginx/html;
        try_files $uri /index.html;
    }

    # Proxy API requests to the backend
    location /submit {
        proxy_pass http://backend:5000/submit;  # Assuming backend service is available on port 5000
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
